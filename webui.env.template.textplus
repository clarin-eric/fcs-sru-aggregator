# text+ customization
VITE_APP_LOGO_PATH=src/assets/images/text-plus-logo.svg
# text+ localization
VITE_I18N_NS_CONTEXT_PREFIX=textplus
VITE_LOCALE=de
VITE_LOCALES='["en", "de"]'

